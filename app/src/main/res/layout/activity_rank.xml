<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Rank">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_rank"
        android:layout_width="409dp"
        android:layout_height="570dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/rank_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_tv_credit"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:layout_marginStart="180dp"
        android:background="#FFC525"
        android:ems="10"
        android:gravity="center"
        android:text="@string/edt_field_question_credit"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/rank_tv_username"
        app:layout_constraintTop_toTopOf="@+id/rank_tv_username" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="41dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:background="#A7670B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rank_tv_credit"
        app:layout_constraintTop_toTopOf="@+id/rank_tv_credit"
        tools:srcCompat="@drawable/ic_diamond" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bảng xếp hạng"
        android:textColor="#E91E63"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rank_tv_credit" />

</androidx.constraintlayout.widget.ConstraintLayout>